<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Penit" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="chipGroupStyle">@style/ChipGroup</item>
        <item name="alertDialogTheme">@style/AlertDialog</item>
        <item name="materialAlertDialogTheme">@style/AlertDialog</item>

    </style>

    <style name="Theme.Penit.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Penit.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
    </style>
    <style name="Theme.Penit.ActionBar.PopUp" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="Theme.Penit.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Penit.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>