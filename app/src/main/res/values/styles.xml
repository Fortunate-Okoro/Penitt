<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrimarySecondarySwap" parent="ThemeOverlay.MaterialComponents">
        <item name="colorPrimary">?attr/colorSecondary</item>
    </style>

    <style name="MainActivity" parent="Theme.Penit">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="Preview" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextView.Clickable" parent="Widget.AppCompat.TextView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ChipGroup" parent="Widget.MaterialComponents.ChipGroup">
        <item name="chipSpacingVertical">8dp</item>
    </style>

    <style name="EditText.Title" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:hint">@string/note_title</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
    </style>


    <style name="TextText.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AlertDialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">?attr/colorSecondary</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialog.Title</item>
    </style>
    <style name="Theme.Penit.actions" parent="Theme.Penit">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <string name="note_title">Note Title</string>
</resources>
